<UserControl x:Class="GitHub.VisualStudio.Contrib.ToolWindow.ToolWindowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:GitHub.UI.Helpers"
             mc:Ignorable="d"
            Background="{DynamicResource VsBrush.Window}"
            Foreground="{DynamicResource VsBrush.WindowText}"
            d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <helpers:SharedDictionaryManager Source="pack://application:,,,/GitHub.VisualStudio.Contrib;component/Properties/ApplicationResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="Press me!" Command="{Binding HelloCommand}" Width="120" Height="80" Name="button1"/>
            <TextBlock Margin="10" HorizontalAlignment="Center" Text="{Binding Text}" Foreground="{DynamicResource HelloTextColor}" />
        </StackPanel>
    </Grid>
</UserControl>
